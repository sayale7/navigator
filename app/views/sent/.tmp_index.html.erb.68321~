<div id="inbox">
    <table>
        <tr>
            <th>
                An
            </th>
            <th>
                Betreff
            </th>
            <th>
                Gesendet am
            </th>
        </tr>
        <% for message in @messages %>
        <tr>
            <td>
                <% Recipient.all(:conditions => "message_id = #{message.id}").each do |recipient| %>
				<%= User.find(recipient.user_id).firstname + " " +  User.find(recipient.user_id).lastname %><br/>
				<% end %>
            </td>
            <td>
                <%= link_to h(message.subject), sent_path(message) %>
            </td>
            <td>
                <%= message.created_at.strftime("%d. %m. %Y um %H:%M Uhr") %>
            </td>
        </tr>
        <% end %>
    </table>
    <%= will_paginate @messages %>
</div>
<div id="mailbox_list">
    <%= render :partial => "layouts/mailbox_container" %>
</div>
