<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <title><% if current_user %>
            <%= current_user.username %>
            im Jetzt<% end %>
        </title>
        <%= stylesheet_link_tag 'style' %>
        <%= javascript_include_tag :fckeditor %>
        <%= javascript_include_tag :all %>
        <%= yield(:head) %>
        <!--[if IE 6]>
            <style type="text/css" media="screen">
            @import url("/stylesheets/ie6.css");
            </style>
        <![endif]-->
        <!--[if IE 7]>
            <style type="text/css" media="screen">
            @import url("/stylesheets/ie7.css");
            </style>
        <![endif]-->
    </head>
    <body>
        <div id="page">
            <div id="header">
                <div id="user_nav">
                    <% if current_user %>
                    <%= link_to "Profil bearbeiten", edit_user_path(:current) %>|<%= link_to "Logout ", logout_path %>|<%= link_to "Neuigkeit erstellen", new_post_path %>
                    <% if current_user.has_role? :admin %>
                    |<%= link_to " Neuen Benutzer anlegen", new_user_path %> |<%= link_to " Benutzer löschen ", :controller => "users" %>
                    |<%= link_to " Seitenreihenfolge ändern ", :controller => "pages" %>
                    <% end %>
                    <% else %>
                    <%= link_to " Login", login_path %>
                    <% end %>
                </div>
            </div>
            <div id="nav">
                <%= render :partial => "layouts/nav" %>
            </div>
            <div id="main">
                <div id="content-wrapper">
                    <div id="content">
                        <% flash.each do |name, msg| %>
                        <%= content_tag :div, msg, :id => "flash_#{name}" %>
                        <% end %>
                        <% if current_user %>
                        <%= yield %>
                        <% end %>
                    </div>
                </div>
                <div id="sidebar-wrapper">
                    <div id="sidebar">
                        <h1>Aktuelles</h1>
                        <ul id="submenu">
                            <% posts = Post.all %>
                            <% posts.each do |post| %>
                            <li>
                                <%= link_to post.title, :controller => "posts", :action => "show", :id => post.id %>
                            </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
            <div style="clear:both">
            </div>
        </div>
    </body>
    <div id="footer-wrapper">
        <div id="footer">
        </div>
    </div>
</html>
