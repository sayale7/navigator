<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html>
    <head>
        <title><% if current_user %>
            <%= current_user.username %>
            im Jetzt<% end %>
        </title>
        <%= stylesheet_link_tag 'style' %>
        <%= javascript_include_tag :fckeditor %>
        <%= javascript_include_tag :defaults %>
        <%= yield(:head) %>
        <!--[if IE 6]>
            <style type="text/css" media="screen">
            @import url("/stylesheets/ie6.css");
            </style>
        <![endif]-->
        <!--[if IE 7]>
            <style type="text/css" media="screen">
            @import url("/stylesheets/ie7.css");
            </style>
        <![endif]-->
    </head>
    <body>
        <div id="page">
            <div id="header">
                <div id="user_nav">
                    <% if current_user %>
                    <%= link_to "Profil bearbeiten", edit_user_path(:current) %>|<%= link_to "Logout", logout_path %>|<%= link_to "Neuen Benutzer anlegen", new_user_path %>|<%= link_to " Benutzer lÃ¶schen ", :controller => "users" %><% else %>
                    <%= link_to "Login", login_path %>
                    <% end %>
                </div>
            </div>
            <div id="nav">
                <ul id="nav">
                     <ul id="nav">
                    <% if current_user %>
                    <li>
                        <%= link_to "Home", root_url %>
                    </li>
                    <li>
                        <%= link_to "Mail", inbox_path %>
                    </li>
                    <% end %>
                    <% if current_user.has_role? :admin %>
                    <% pages = Page.roots %>
                    <% pages.each do |page| %>
                    <li>
                        <%= link_to h(page.name), page %>
                    </li>
                    <% end %>
                    <% else %>
                    <% pages = Page.find_all_by_inactive_and_parent_id(false, nil) %>
                    <% pages.each do |page| %>
                    <li>
                        <%= link_to h(page.name), page %>
                    </li>
                    <% end %>
                    <% end %>
                    <% if current_user.has_role? :admin %>
                    <li>
                        <%= link_to "New Page", new_page_path %>
                    </li>
                    <% end %>
                </ul>
            </div>
            <div id="ancestors">
                <p>
                    <% for page in @page.ancestors.reverse %>
                    <%= link_to h(page.name), page %>&gt;<% end %>
                </p>
            </div>
            <div id="main">
                <div id="page_title">
                    <h1><%= @page.name %></h1>
                </div>
                <div id="content-wrapper">
                    <div id="content">
                        <% flash.each do |name, msg| %>
                        <%= content_tag :div, msg, :id => "flash_#{name}" %>
                        <% end %>
                        <div id="editorcontent">
                            <%= yield %>
                        </div>
                    </div>
                </div>
                <div id="sidebar-wrapper">
                    <% unless @page.children.empty? %>
                    <div id="sidebar">
                        <ul id="submenu">
                            <% for page in @page.children %>
                            <li>
                                <%= link_to page.name, page_path(page), :title => page.name %>
                            </li>
                            <% end %>
                        </ul>
                    </div>
                    <% end %>
                </div>
            </div>
            <div style="clear:both">
            </div>
        </div>
    </body>
    <div id="footer-wrapper">
        <div id="footer">
        </div>
    </div>
</html>
